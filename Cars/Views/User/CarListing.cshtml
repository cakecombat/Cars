@model IEnumerable<Cars.Models.Car>
@{
    ViewData["Title"] = "Car&You - Car Listings";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #d9534f;
            --secondary-color: #f8d7da;
            --text-color: #333;
            --background-color: #f8f9fa;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: var(--primary-color);
            font-size: 2.5em;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .car-card {
            background-color: #fff;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .car-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            }

        .car-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .car-details {
            padding: 20px;
        }

        .car-make-model {
            font-size: 1.4em;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .car-price {
            font-size: 1.2em;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 15px;
        }

        .view-details-btn {
            display: inline-block;
            background-color: var(--primary-color);
            color: #fff;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .view-details-btn:hover {
                background-color: #c9302c;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Car Listings</h1>
        <div class="card-container">
            @foreach (var car in Model)
            {
                <div class="car-card">
                    @if (car.Picture != null && car.Picture.Length > 0)
                    {
                        var base64Image = Convert.ToBase64String(car.Picture);
                        <img src="data:image/jpeg;base64,@base64Image" alt="Car Image" class="car-image" />
                    }
                    else
                    {
                        <img src="/images/default-car.jpg" alt="No Image Available" class="car-image" />
                    }
                    <div class="car-details">
                        <div class="car-make-model">@car.Make @car.Model</div>
                        <div class="car-price">@car.Price.ToString("C", new System.Globalization.CultureInfo("en-NG"))</div>
                        <a asp-action="CarDetails" asp-route-id="@car.Id" class="view-details-btn">View Details</a>
                    </div>
                </div>
            }
        </div>

        @await Html.PartialAsync("_ContactUsForm", new Cars.Models.ContactUsApiModel())
    </div>
</body>
</html>